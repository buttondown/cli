{
  "name": "@buttondown/cli",
  "version": "1.0.2",
  "description": "CLI for Buttondown to sync emails and media with a local folder",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "buttondown": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "prepare": "npm run build",
    "lint": "xo --fix",
    "cli": "tsc && node dist/cli.js"
  },
  "keywords": [
    "buttondown",
    "cli",
    "newsletter",
    "sync"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.9.0",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "conf": "^13.1.0",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "ink": "^5.2.1",
    "ink-text-input": "^6.0.0",
    "meow": "^13.2.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.15.31",
    "@types/react": "^19.1.8",
    "delay": "^6.0.0",
    "ink-testing-library": "^4.0.0",
    "react-devtools-core": "^6.1.5",
    "ts-blank-space": "^0.6.1",
    "tsimp": "^2.0.12",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome"
    ]
  }
}
