{
  "name": "@buttondown/cli",
  "version": "1.0.1",
  "description": "CLI for Buttondown to sync emails and media with a local folder",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "buttondown": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "tsc && ava",
    "prepare": "npm run build",
    "lint": "xo --fix"
  },
  "keywords": [
    "buttondown",
    "cli",
    "newsletter",
    "sync"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.9.0",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "conf": "^13.1.0",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.2",
    "ink": "^5.2.0",
    "ink-text-input": "^6.0.0",
    "meow": "^13.2.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.2",
    "@types/react": "^19.1.2",
    "ava": "^6.3.0",
    "ink-testing-library": "^4.0.0",
    "ts-blank-space": "^0.6.1",
    "tsimp": "^2.0.11",
    "typescript": "^5.4.5",
    "xo": "^1.0.5"
  },
  "ava": {
    "extensions": {
      "ts": "module",
      "tsx": "module"
    },
    "nodeArguments": [
      "--import=tsimp"
    ]
  },
  "engines": {
    "node": ">=18"
  }
}
