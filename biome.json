{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "extends": ["../biome.json"],
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "suspicious": {
        "noImplicitAnyLet": "off",
        "noExplicitAny": "off"
      }
    }
  },
  "files": {
    "ignore": ["node_modules/**", "dist/**", "src/lib/**"]
  }
}
